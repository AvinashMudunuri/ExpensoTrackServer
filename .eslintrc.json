{
  "root": true,
  "env": {
    "commonjs": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "warn",
    "no-undef": "error",
    "no-unused-vars": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "mocha": true
      }
    }
  ]
}
